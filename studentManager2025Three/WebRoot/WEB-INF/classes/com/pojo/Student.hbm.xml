<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<!-- 
 映射文件的命名必须为"持久化类名.hbm.xml"
 其位置必须和持久化类放在同一目录之下
 其作用是将持久化类和对应的数据库表映射关联起来，实现O/R（对象和关系数据的转换）映射

 -->

<hibernate-mapping>
	<class name="com.pojo.Student" table="stu">
		<id name="sno" type="java.lang.Integer">
			<column name="sno" />
			<!-- <generator class="native"/> -->
		</id>
		<property name="sname" type="java.lang.String" not-null="true">
			<column name="sname" />
		</property>

		<property name="pwd" type="java.lang.String" not-null="true">
			<column name="pwd" />
		</property>

		<property name="age" type="java.lang.Integer">
			<column name="age" />
		</property>
		
		<property name="hobbit" type="java.lang.String">
			<column name="hobbit" />
		</property>

		<property name="address" type="java.lang.String" >
			<column name="address" />
		</property>
		
	</class>
</hibernate-mapping>